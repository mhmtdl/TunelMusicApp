{{! views/auth/login.hbs }}
<div class="inner-form form-container">
  <div class="row">
     <div class="col-lg-6 col-10 m-auto">
      <form action="/login" method="POST">
       <div class="form-group">
    <label for="username">Username</label>
    <input class="form-control" type="text" name="username">
  </div>

  <div class="form-group">
    <label for="password">Password</label>
    <input class="form-control" type="password" name="password">
  </div>

  {{#if errorMessage}}
    <div class="error-message">{{errorMessage}}</div>
  {{/if}}

  
    <button class="btn btn-course btn-block mt-4" type="submit">Log in</button>
  
</form>
<p class="mt-2"><small>Not a member yet?<a class="course-link" href="/signup">Sign up</a></small></p>
</div>
</div>
</div>